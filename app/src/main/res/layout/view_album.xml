<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="330dp"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:id="@+id/view_total"
    android:background="@color/beigeSuperLight"
    android:padding="3dp">

    <ImageView
        android:id="@+id/imvFoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imvFoto"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvNom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Queen"
            android:textAlignment="center"
            android:textSize="21dp"
            android:textStyle="bold"
            android:paddingTop="3dp"
            android:paddingHorizontal="0dp">
        </TextView>

        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="A Night At The Opera"
            android:textAlignment="center"
            android:textStyle="italic"
            android:padding="1dp">
        </TextView>

        <TextView
            android:id="@+id/txvAny"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1999"
            android:textAlignment="viewEnd"
            android:textStyle="italic"
            android:layout_marginRight="25dp">
        </TextView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imbRemove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_trash"
        android:background="@color/beigeSuperLight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15dp"
        android:visibility="invisible">

    </ImageButton>
</androidx.constraintlayout.widget.ConstraintLayout>