<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SongListFragment"
    android:orientation="vertical"
    android:background="@color/beigeSuperLight">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imbTornar"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/green"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Track List"
            android:textColor="@color/black"
            android:textSize="23dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bamboo"
        app:layout_constraintTop_toBottomOf="@id/linearLayout2">

        <ImageView
            android:backgroundTint="@color/bamboo"
            android:layout_margin="5dp"
            android:id="@+id/imvFotoAlbum"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/loading"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/txvNomGrup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom del grup"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/txvNomAlbum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom del albumJSONSongs"
                android:textSize="20dp"/>
        </LinearLayout>



    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvSongs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/linearLayout3">

    </androidx.recyclerview.widget.RecyclerView>

    <ImageButton
        android:id="@+id/imbEsborrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_remove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/bamboo"
        android:layout_margin="5dp"/>

    <ImageButton
        android:id="@+id/imbAfegir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_afegir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/bamboo"
        android:layout_margin="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>